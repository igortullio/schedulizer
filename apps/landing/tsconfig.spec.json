{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "../..",
    "outDir": "dist",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": ["vitest/globals", "@testing-library/jest-dom", "vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@schedulizer/db": ["../../libs/db/src/index.ts"],
      "@schedulizer/shared-types": ["../../libs/shared/types/src/index.ts"],
      "@schedulizer/env": ["../../libs/shared/env/src/index.ts"],
      "@schedulizer/env/server": ["../../libs/shared/env/src/server.ts"],
      "@schedulizer/env/client": ["../../libs/shared/env/src/client.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "public/**/*.json",
    "../../libs/shared/env/src/**/*.ts",
    "../../libs/shared/types/src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/shared/types"
    },
    {
      "path": "../../libs/shared/env"
    }
  ]
}
